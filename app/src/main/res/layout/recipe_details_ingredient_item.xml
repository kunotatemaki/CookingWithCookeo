<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="ingredient"
                type="com.rukiasoft.androidapps.cocinaconroll.persistence.entities.Ingredient"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/recipe_ingredient_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/recipe_ingredient_icon"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:tint="@color/ColorDescriptions"
            app:layout_constraintTop_toTopOf="@id/recipe_ingredient_description"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_bone"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/recipe_ingredient_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="ingredient"
            app:layout_constraintStart_toEndOf="@id/recipe_ingredient_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{ingredient.ingredient}"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>