<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="recipe"
                type="com.rukiasoft.androidapps.cocinaconroll.persistence.relations.RecipeWithInfo"/>
    </data>
<LinearLayout

    android:id="@+id/recipe_description_cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_link_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_cardview"
        android:layout_marginRight="@dimen/margin_cardview"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/margin_below_cardview"
        android:clickable="false"
        android:focusable="false"
        app:cardCornerRadius="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/cardview_link_textview"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    tools:text="Link to recipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/barrier"
                    />

            <ImageView
                    android:id="@+id/recipe_details_icon_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:src="@drawable/ic_minutes_24dp"
                    android:tint="@color/ColorDescriptions"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/recipe_details_icon_portions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:src="@drawable/ic_portions_24dp"
                    android:tint="@color/ColorDescriptions"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_details_icon_minutes"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/recipe_details_text_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24"
                    app:layout_constraintTop_toTopOf="@id/recipe_details_icon_minutes"
                    app:layout_constraintBottom_toBottomOf="@id/recipe_details_icon_minutes"
                    app:layout_constraintEnd_toStartOf="@id/recipe_details_icon_minutes"
                    android:layout_marginEnd="4dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/ColorDescriptions"
                    />

            <TextView
                    android:id="@+id/recipe_details_text_portions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4"
                    app:layout_constraintTop_toTopOf="@id/recipe_details_icon_portions"
                    app:layout_constraintBottom_toBottomOf="@id/recipe_details_icon_portions"
                    app:layout_constraintEnd_toStartOf="@id/recipe_details_icon_portions"
                    app:layout_marginEnd="4dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/ColorDescriptions"/>

            <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barrier"
                    app:barrierDirection="start"
                    app:constraint_referenced_ids="recipe_details_text_minutes,recipe_details_text_portions"
                    tools:layout_editor_absoluteX="411dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_cardview"
        android:layout_marginRight="@dimen/margin_cardview"
        android:layout_marginBottom="@dimen/margin_below_cardview"
        android:clickable="false"
        android:focusable="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ingredients_title_cardview"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:textColor="@color/ColorDescriptions"
                android:text="@string/ingredients"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:src="@drawable/ic_ingredients_32"
                android:tint="@color/ColorDescriptions"
                android:contentDescription="@string/ingredients"/>
            <LinearLayout
                android:id="@+id/listview_ingredients_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ingredients_title_cardview">
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_cardview"
        android:layout_marginRight="@dimen/margin_cardview"
        android:layout_marginBottom="@dimen/margin_below_cardview"
        android:clickable="false"
        android:focusable="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/steps_title_cardview"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:textColor="@color/ColorDescriptions"
                android:text="@string/steps"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/margin_cardview"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:src="@drawable/ic_procedure_32"
                android:tint="@color/ColorDescriptions"
                android:contentDescription="@string/steps"/>
            <LinearLayout
                android:id="@+id/listview_steps_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/steps_title_cardview"
                >
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/card_tip"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_cardview"
            android:layout_marginRight="@dimen/margin_cardview"
            android:layout_marginBottom="@dimen/margin_below_cardview"
            android:clickable="false"
            android:focusable="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tip_title_cardview"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:textColor="@color/ColorDescriptions"
                android:text="@string/tip"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/margin_cardview"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                android:layout_marginTop="@dimen/margin_text_cardview"
                android:layout_marginBottom="@dimen/margin_text_cardview"
                android:src="@drawable/ic_tip_36dp"
                android:tint="@color/ColorDescriptions"
                android:contentDescription="@string/steps"/>
            <TextView
                android:id="@+id/tip_body_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_text_cardview"
                android:layout_marginRight="@dimen/margin_text_cardview"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_below="@id/tip_title_cardview"
                android:paddingBottom="@dimen/margin_cardview"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

</layout>