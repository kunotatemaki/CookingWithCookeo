<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/thanks_blogs_title"
                        android:id="@+id/textView_thanks_blogs_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/thanks_intro"
                        android:id="@+id/textView_thanks_blogs_body"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/textView_thanks_blogs_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/colaborator1"
                        android:id="@+id/colaborador1"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/textView_thanks_blogs_body"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/colaborator2"
                        android:id="@+id/colaborador2"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/colaborador1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/colaborator3"
                        android:id="@+id/colaborador3"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/colaborador2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/colaborator4"
                        android:id="@+id/colaborador4"
                        android:autoLink="web"
                        android:linksClickable="true"

                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/colaborador3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/support_girl_title"
                        android:id="@+id/textView_support_girl_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/colaborador4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/support_girl_body"
                        android:id="@+id/textView_support_girl_body"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/textView_support_girl_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:text="@string/support_recipes"
                        android:id="@+id/textView_support_recipes"
                        android:autoLink="email"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintTop_toBottomOf="@id/textView_support_girl_body"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/CocinaConRollActionBarTheme"
                app:layout_scrollFlags="scroll|enterAlways">

            <include
                    layout="@layout/standard_toolbar"
                    android:id="@+id/thanks_toolbar"
                    />


        </com.google.android.material.appbar.AppBarLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>